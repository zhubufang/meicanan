@import './reset.styl';

body, html {
  line-height: 1;
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback';
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-justify-center {
  justify-content: center;
}

.flex-justify-between {
  justify-content: space-between;
}

.flex-justify-arround {
  justify-content: space-around;
}

.flex-align-center {
  align-items: center;
}

.flex-item {
  flex: 1;
}

.m-top {
  margin-top: 10px;
}

.m-right {
  margin-right: 10px;
}

.m-left {
  margin-left: 10px;
}

.m-bottom {
  margin-bottom: 10px;
}

.m-tb {
  margin: 10px 0;
}

.padding {
  padding: 10px;
}

.p-top {
  padding-top: 10px;
}

.p-bottom {
  padding-bottom: 10px;
}

.p-right {
  padding-right: 10px;
}

.p-left {
  padding-left: 10px;
}

.border {
  border: 1px solid #ccc;
}

.b-shadow {
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.5);
}

.b-radius {
  border-radius: 8px;
}

.b-radius-5 {
  border-radius: 50%;
}

.pos-c {
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.clearfix:before, .clearfix:after {
  display: table;
  content: ''; /* 不用有内容也可以 */
}

.clearfix:after {
  clear: both;
}

.clearfix {
  zoom: 1;
}
